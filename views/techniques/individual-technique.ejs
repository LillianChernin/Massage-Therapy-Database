<% include ../partials/header %>
<h4><a href="http://localhost:3000/disorders/<%= disorderId %>/techniques">Back to all techniques</a></h4>
<h1><%= data.shortDescription %></h1>
<% if (data.author !== "db_owner") { %>
  <h3>Added By <%= data.author %></h3>
<% } %>
<p><%= data.detailedDescription %></p>
<fieldset>
  <h4>Comments</h4>
  <p class="requireLogout">Login to add a comment</p>
  <div class="hidden requireLogin">
    <form class="addCommentForm">
      <label for="commentInputField"></label>
      <textarea placeholder="Your comment" name="commentInputField"></textarea>
      <button>Post Comment</button>
    </form>
  </div>
  <% if (data.comments.length > 0) { %>
  <%  for (let k = 0; k < data.comments.length; k++) { %>
      <div class="commentBox">
        <h5 class="commentHeader"><%= data.comments[k].userName %> - <%= data.comments[k].date %></h5>
        <p class="comment"><%= data.comments[k].comment %></p>
      </div>
  <% } %>
<% } %>
</fieldset>

<% include ../partials/footer %>
